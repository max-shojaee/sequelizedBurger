<div class="container">
	<div class="row">
  		<div class="col-xs-12 text-center" id="top-bar">
        <br>
  		  <img src="../assets/img/burger.jpg" height="200" class="center-block">
  			<h1>EAT DA BURGER!</h1>
  		</div>
  </div>
  <br>

  <div class="row">
  		<div class="col-xs-7 text-center" class="task">
  				{{#each burger_data}}
  					{{#unless this.devoured}}
        				<div class="col-xs-9 text-center">
        					<pre>{{this.id}}. {{this.burger_name}}</pre>
        				</div>
          			<div class="col-xs-3 text-center">
          				<form method="POST" action="/burgers/update?_method=PUT" class="button-size">
          					 <input type="hidden" name="burger_id" type="text" value= {{this.id}}>
          					 <button type="submit" class="btn btn-default"> DEVOUR IT!</button>
          				</form>
          			</div>
  			     {{/unless}}
  			   {{/each}}
  		</div>

  		<div class="col-xs-5 text-center" class="task">
    			{{#each burger_data}}
    				{{#if this.devoured}}
              <pre>{{this.id}}. {{this.burger_name}}</pre>
    				{{/if}}
    			{{/each}}
  		</div>
  </div>
  <br>
  <div class="row">
        <div class="col-xs-12 text-center enter_section">
          <form action="/burgers/addOne" method="POST">
            <input type="text" name="burger_name" class="center-block burger_field" value="" id="enter_text">
            <p><strong>Enter a burger you'd like to eat and press Submit.</strong></p>
            <button type="submit" class="btn btn-primary" id="text-enter-button">SUBMIT</button>
          </form>
        </div>
  </div>

</div>



